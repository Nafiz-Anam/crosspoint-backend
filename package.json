{
  "name": "crosspoint-backend",
  "version": "1.0.0",
  "description": "Backend REST API for the Crosspoint application (Italian client) built with Node.js, TypeScript, Express, and Prisma.",
  "main": "src/index.ts",
  "repository": "https://github.com/Nafiz-Anam/node-prisma-rest-boilerplate.git",
  "scripts": {
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "docker:watch": "docker compose watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "create-admin": "node create-admin-user.js",
    "create-admin:ts": "npx ts-node create-admin-user.ts",
    "prepare": "husky",
    "build": "npx rimraf build && tsc -p tsconfig.json"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "boilerplate",
    "express",
    "rest",
